<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/fondo2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp"
    tools:context=".Creators"
    android:orientation="vertical">

    <TextView
        android:id="@+id/creators_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CREATORS:"
        android:textColor="#C8FFFFFF"
        android:textStyle="italic"
        android:textSize="40dp"
        android:layout_gravity="center"
        />

    <View
        android:layout_width="200dp"
        android:layout_height="1dp"
        android:background="#fff"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:layout_gravity="center">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/creators_img1"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:src="@drawable/pipe"
        android:layout_marginRight="20dp"
        />

    <TextView
        android:layout_width="190dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Felipe Eduardo Urra Cortes"
        android:textSize="23sp"
        android:textStyle="bold"
        android:background="#7EFFFEFE">
    </TextView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginVertical="20dp">


        <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/creators_img2"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:src="@drawable/yota"
            android:layout_marginRight="20dp"
            />

    <TextView
        android:layout_width="190dp"
        android:layout_height="60dp"
        android:text="Jonathan Esteban Valenzuela Ortega"
        android:textSize="23sp"
        android:textStyle="bold"
        android:background="#7EFFFEFE"
        android:layout_gravity="center"
        android:gravity="center">
    </TextView>

    </LinearLayout>

</LinearLayout>