<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/fondo2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp"
    tools:context=".Creators">

    <TextView
        android:id="@+id/creators_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CREATORS:"
        android:textColor="#C8FFFFFF"
        android:textStyle="bold"
        android:textSize="40dp"
        android:layout_centerHorizontal="true"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/creators_img1"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/pipe"
        android:layout_below="@id/creators_title"
        />

    <TextView
        android:layout_width="190dp"
        android:layout_height="60dp"
        android:layout_marginTop="65dp"
        android:text="Felipe Eduardo Urra CortÃ©z"
        android:textSize="23sp"
        android:textStyle="bold"
        android:layout_alignParentRight="true"
        android:layout_below="@id/creators_title"
        android:background="#7EFFFEFE">
    </TextView>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/creators_img2"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/yota"
        android:layout_below="@id/creators_img1"
        />

    <TextView
        android:layout_width="190dp"
        android:layout_height="60dp"
        android:layout_marginTop="135dp"
        android:text="Jonathan Esteban Valenzuela Ortega"
        android:textSize="23sp"
        android:textStyle="bold"
        android:layout_alignParentRight="true"
        android:layout_below="@id/creators_img1"
        android:background="#7EFFFEFE">
    </TextView>

</RelativeLayout>